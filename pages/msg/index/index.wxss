.msg-cover{
  display: flex;
  flex-direction: column;  
}

.msg-item{
  width:90vw;
  margin-left:5vw;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding:20rpx 0;
  border-bottom: 1rpx solid #eaeaea;
}

.icon-cover{
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
  width:16vw;
  position: relative;
}

.msg-icon{
  width:60rpx;
  height:60rpx;
}

.msg-icon-protrait{
  width:60rpx;
  height:60rpx;
  border-radius: 100%;
  overflow: hidden;
}

  
.msg-banner{
  padding:5rpx 16rpx;
  background-color: #ec5358;
  font-size: 23rpx;
  color:#fff;
  position: absolute;
  top:-20rpx;
  right:30rpx;
  border-radius: 100rpx;
}

.msg-round-banner{
  background-color: #ec5358;
  position: absolute;
  top:-20rpx;
  right:30rpx;
  border-radius: 100rpx;
  width:20rpx;
  height:20rpx;
}

.msg-content{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width:84vw;
}

.msg-header{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom:10rpx;
}

.title{
  font-size: 28rpx;
  color:#000;

}

.tag{
  font-size: 22rpx;
  color:#999;
}

.msg-body{
  font-size: 26rpx;
  color:#666;
}




.footer-cover {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}