    <view class='tabTxt' style='{{chosenId==1?"color:#fe395c;font-weight:800;font-size:36rpx;border-bottom:4rpx solid #fe395c":""}}'>关注</view>
  </view>
  <view class='tabview' data-id='2' bindtap='chooseTab'>
