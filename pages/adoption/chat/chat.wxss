.announcement {
  color: #a0a0a0;
  background: #fff0e3;
  border-radius: 6rpx;
  line-height: 66rpx;
  height: 66rpx;
}

.announcement-context {
  width: 580rpx;
  /* 偏移出文本框的内容隐藏掉 */
  overflow: hidden;
}

.announcement-text {
  width: 570rpx;
  /* 文字内容只做一行显示 */
  white-space: nowrap;
}

.tool-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 6vh;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-top: 1rpx solid #eaeaea;
  background-color: #fff;
  z-index: 1000
}

.bar-item {
  width: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bar-img {
  width: 50rpx;
  height: 50rpx;
}

.bar-input {
  width: 340rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #000;
  border-radius: 100rpx;
  border: 1rpx solid #c4d1f6;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-left: 20rpx;
}

.bar-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: #fff;
  background-color: #356bff;
  border-radius: 100rpx;
  font-size: 26rpx;
  margin-left: 40rpx;
}


.msg-receive {
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 40rpx;
}

.pop-portrait {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  overflow: hidden;
}

.pop-text-cover-left {
  position: relative;
  max-width: 500rpx;
  margin-left: 30rpx;
  border-radius: 15rpx;
  padding: 20rpx 20rpx;
  background-color: #356bff;
}

.pop-text-cover-right {
  position: relative;
  max-width: 500rpx;
  margin-right: 30rpx;
  border-radius: 15rpx;
  padding: 20rpx 20rpx;
  background-color: #356bff;
}

.pop-text-cover-arrow-left {
  position: absolute;
  right: 100%;
  top: 10%;
  width: 32rpx;
  height: 32rpx;
  border-width: 0;
  border-style: solid;
  border-color: transparent;
  margin-right: -6rpx;
  border-bottom-width: 20rpx;
  border-bottom-color: currentColor;
  border-radius: 0 0 0 64rpx;
  color: #356bff;
}

.pop-text-cover-arrow-right {
  position: absolute;
  left: 100%;
  top: 10%;
  width: 32rpx;
  height: 32rpx;
  border-width: 0;
  border-style: solid;
  border-color: transparent;
  margin-left: -6rpx;
  border-bottom-width: 20rpx;
  border-bottom-color: currentColor;
  border-radius: 0 0 64rpx 0;
  color: #356bff;
}

.pop-text {
  color: #fff;
  font-size: 28rpx;
}

.msg-send {
  width:700rpx;
  padding-left: 20rpx;
  display: flex;
  flex-direction: row-reverse;
  justify-content: flex-start;
  margin-top: 40rpx;
}
