page {
  padding-top: 100rpx;
  background: rgba(241, 241, 243, 1);
}

.top-cover {
  background-color: #1c43b2;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-bottom: 30rpx;
}

.user-cover {
  width: 92vw;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.user-cover-default {
  width: 92vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-info {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.user-info-default {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.co-portrait {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  overflow: hidden;
  margin-right: 20rpx;
  border: 4rpx solid #fff;
}

.co-portrait-default {
  width: 100rpx;
  height: 100rpx;
}

.info-cover {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.info-cover-default {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cover-btn {
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
  color: #000;
  border-radius: 50rpx;
}

.co-name {
  font-size: 38rpx;
  color: #fff;
  font-weight: 800;
  margin-bottom: 5rpx;
}

.co-intro {
  width: 400rpx;
  font-size: 25rpx;
  color: #fff;
}

.co-follows {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 10rpx;
}

.follow {
  font-size: 25rpx;
  color: #fff;
  margin-right: 20rpx;
}

.follow-btn {
  font-size: 24rpx;
  color: rgba(254, 254, 254, 0.75);
  padding: 9rpx 15rpx;
}

.co-home {
  font-size: 24rpx;
  color: #fff;
  padding: 20rpx 0rpx;
}

.modi-info {
  width: 92vw;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.co-intro {
  width: 92vw;
  color: #fff;
  font-size: 26rpx;
}

.modi-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 30rpx;
}

.modi-txt {
  font-size: 26rpx;
  color: #fff;
}

.oper-cover {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 92vw;
  padding-left: 4vw;
}

.footer-cover {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.footer-item {
  color: #999;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.warning {
  color: #fe395c;
}

.footer-keyword {
  font-size: 26rpx;
  color: rgba(255, 104, 0, 1);
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
}

.oper-btn {
  background-color: #fff;
  font-size: 26rpx;
  color: rgba(26, 26, 26, 1);
  border: none;
  line-height: 1;
  padding-left: 0;
  padding-right: 0;
  overflow: visible;
}

.oper-btn::after {
  border: none;
  outline: none;
}


.footer-item-btn {
  width: 280rpx;
  color: #999;
  font-size: 26rpx;
  margin-top: 20rpx;
  height: 55rpx;
  line-height: 55rpx;
  border-radius: 100rpx;
  border: 1rpx solid #999;
  background-color: #fff;
}

.options-container {
  background: rgba(254, 254, 254, 1);
  border-radius: 8rpx;
  margin-top: 20rpx;
  margin-left: 30rpx;
  width: 690rpx;
  display: flex;
  flex-direction: column;
}

.option-item {
  padding: 40rpx 30rpx 0 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(26, 26, 26, 1);
}

.option-item image {
  width: 42rpx;
  height: 42rpx;
  margin-bottom: 10rpx;
}

.flex-auto {
  flex: 1;
}

.padding-r {
  padding-right: 43rpx;
}

.title-container {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.vertical-line {
  width: 6rpx;
  height: 30rpx;
  background: rgba(35, 61, 203, 1);
  border-radius: 3rpx;
}

.title {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(26, 26, 26, 1);
  margin-left: 20rpx;
  flex: 1;
}

.sign-in {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(254, 254, 254, 1);
  width: 126rpx;
  height: 41rpx;
  border-radius: 21rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.learn-more {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(136, 136, 136, 1);
}

.divider {
  margin-left: 46rpx;
  margin-right: 20rpx;
  height: 1rpx;
  background: rgba(229, 229, 229, 1);
}

.task {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 20rpx 30rpx 46rpx;
  border-bottom: 1rpx solid rgba(229, 229, 229, 1);
}

.task-name {
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(26, 26, 26, 1);
}

.task-point {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(255, 93, 0, 1);
  margin-top: 10rpx;
  white-space: pre;
}

.point-btn {
  font-size: 26rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(255, 93, 0, 1);
  height: 60rpx;
  background: rgba(254, 254, 254, 1);
  border-radius: 30rpx;
  border: 1rpx solid rgba(255, 93, 0, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 30rpx;
}

.sign-in-container {
  display: flex;
  margin: 30rpx 20rpx;
}

.day-container {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.sign-day {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.point-value {
  font-size: 26rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(255, 104, 0, 0.6);
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 239, 166, 1);
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.day {
  font-size: 22rpx;
  font-family: PingFang-SC-Regular, PingFang-SC;
  color: rgba(28, 28, 28, 1);
  margin-top: 13rpx;
}

.divider-day {
  width: 5px;
  height: 1rpx;
  background: rgba(255, 216, 0, 1);
  margin-top: 30rpx;
}

.add-point {
  width: 46rpx;
  height: 28rpx;
  position: absolute;
  top: -10rpx;
  right: -14rpx;
}

.sign-ok {
  width: 60rpx;
  height: 60rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  left: 0;
  top: 0;
  flex-direction: column;
  background: rgba(9, 9, 9, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
}

.mask-txt {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(254, 254, 254, 1);
  display: flex;
}

.mask-txt text {
  color: #FFCD00;
}

.mask-icon {
  width: 158rpx;
  height: 182rpx;
  margin-top: 58rpx;
}

.mask-close {
  width: 74rpx;
  height: 74rpx;
  margin-top: 84rpx;
}

.filter-header {
  position: relative;
  text-align: left;
  color: #222;
  font-size: 32rpx;
  font-weight: 500;
  width: 80%;
  margin-left: 10%;
}

.filter-content {
  font-size: 30rpx;
  color: #2d2d2d;
  font-weight: bold;
  text-align: left;
  width: 80%;
  margin-left: 10%;
  margin-top: 27rpx;
}

.filter-btn-cover {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  margin-left: 10%;
}

.filter-btn {
  width: 150rpx;
  height: 75rpx;
  line-height: 75rpx;
  color: #019bff;
  font-size: 28rpx;
}

.filter-btn-sumbit {
  width: 250rpx;
  height: 75rpx;
  line-height: 75rpx;
  background-color: #019bff;
  color: #fff;
  font-size: 28rpx;
  margin: 0 0;
}