.follow-cover {
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.follow-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eaeaea;
}

.item-info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.info-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  overflow: hidden;
  margin-right: 40rpx;
}

.info-name {
  width: 340rpx;
  font-size: 28rpx;
  color: #000;
  display: flex;
  flex-wrap: wrap;
}

.item-btn {
  color: #999;
  border: 1rpx solid #eaeaea;
  font-size: 28rpx;
  width: 180rpx;
  border-radius: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.item-btn-follow{
  color: #ff2727;
  border: 1rpx solid #ff2727;
  font-size: 28rpx;
  width: 180rpx;
  border-radius: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.loading_cover {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  line-height: 80rpx;
}

.loading_text {
  width: 120rpx;
  font-size: 28rpx;
  color: #999;
  float: left;
  text-align: center;
}

.spinner {
  width: 30px;
  height: 30px;
  position: relative;
  float: left;
}

.double-bounce1, .double-bounce2 {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #1c43b2;
  opacity: 0.6;
  position: absolute;
  top: 0;
  left: 0;
  -webkit-animation: bounce 2.0s infinite ease-in-out;
  animation: bounce 2.0s infinite ease-in-out;
}

.double-bounce2 {
  -webkit-animation-delay: -1.0s;
  animation-delay: -1.0s;
}

@-webkit-keyframes bounce {
  0%, 100% {
    -webkit-transform: scale(0.0);
  }

  50% {
    -webkit-transform: scale(1.0);
  }
}

@keyframes bounce {
  0%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  }

  50% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}
