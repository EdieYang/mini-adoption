.form-cover{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.form-item-1{
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.form-portrait{
  width:120rpx;
  height:120rpx;
  border-radius: 100%;
  overflow: hidden;
}

.form-item-2{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top:50rpx;
  align-items: center;
}

.form-label{
  width:140rpx;
  margin-left:20rpx;
  font-size: 32rpx;
  color: #2d2d2d;
}

.form-input{
  width: 500rpx;
  font-size:32rpx;
  color: #2d2d2d;
}

.form-value{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.checkbox-item {
  padding-left: 22rpx;
  padding-right: 22rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  color: #1c43b2;
  font-size: 26rpx;
  text-align: center;
  border: 1rpx solid #809cec;
  border-radius: 50rpx;
  float: left;
  margin-right: 20rpx;
}


.form-picker{
  font-size:32rpx;
  color:#a9a9a9;
}

.choosed{
  color:#2d2d2d;
}


.form-btn{
  width:260rpx;
  height:75rpx;
  line-height: 75rpx;
  color:#fff;
  font-size: 36rpx;
  margin:0 auto;
  margin-top:250rpx;
  background-color: #1c43b2;
  border:none;
  border-radius: 100rpx;
}