page {
  background: #fbfbfb;
  height: auto;
  overflow: hidden;
}

.wrapper {
  width: 100%;
  margin: 30rpx 0;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  font-size: 28rpx;
}

.handWriting {
  background: #fff;
  width: 100%;
  height: 650rpx;
}

.handRight {
  display: inline-flex;
  align-items: center;
}

.handCenter {
  border: 4rpx dashed #e9e9e9;
  width:650rpx;
  overflow: hidden;
  box-sizing: border-box;
}


.handBtn button {
  font-size: 28rpx;
}

.handBtn {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top:30rpx;
}

.delBtn {
  color: #666;
}


.subBtn {
  margin-right:30rpx;
  color: #fff;
  background-color:#1c43b2
}

