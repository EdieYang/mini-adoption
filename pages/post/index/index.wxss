.top-block-cover {
  height: 250rpx;
  width: 100%;
  background-color: #1c43b2;
}

.post-cover {
  position: absolute;
  left: 0rpx;
  top: 15vh;
  width: 90vw;
  padding-left: 5vw;
  display: flex;
  flex-direction: column;
}

.divider {
  font-size: 26rpx;
  color: #1c43b2;
  text-align: center;
  margin-bottom: 40rpx;
}

.post-item {
  width: 100%;
  height: 260rpx;
  background-color: #fff;
  box-shadow: 0rpx 6rpx 4rpx rgba(6, 69, 108, 0.1);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  border-radius: 10rpx;
  z-index: 100;
}

.item-header {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 23rpx;
  color: #333;
  width: 36%;
}

.title-1 {
  font-size: 38rpx;
  color: #1c43b2;
  font-weight: 800;
  margin-bottom: 10rpx;
}

.item-btn-1 {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  background-color: #1c43b2;
  border-radius: 100rpx;
  margin-top: 20rpx;
  font-size: 29rpx;
  margin-left: 0;
}

.title-2 {
  font-size: 38rpx;
  color: #e85579;
  font-weight: 800;
  margin-bottom: 10rpx;
}

.item-btn-2 {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  background-color: #e85579;
  border-radius: 100rpx;
  margin-top: 20rpx;
  font-size: 29rpx;
  margin-left: 0;
}

.tip_container {
  z-index: 80000;
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background-color: #000;
  opacity: 0.75;
}

.tipTap {
  z-index: 90000;
  position: fixed;
  left: 60rpx;
  top: 34vh;
  height: 360rpx;
  width: 630rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-top: 100rpx;
  padding-bottom: 40rpx;
}

.header {
  position: relative;
  text-align: left;
  color: #222;
  font-size: 32rpx;
  font-weight: 500;
  width: 80%;
  margin-left: 10%;
}

.content {
  font-size: 30rpx;
  color: #2d2d2d;
  font-weight: bold;
  text-align: left;
  width: 80%;
  margin-left: 10%;
  margin-top: 27rpx;
}

.filter-btn-cover {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 80%;
  margin-left: 10%;
}

.filter-btn {
  width: 150rpx;
  height: 75rpx;
  line-height: 75rpx;
  color: #019bff;
  font-size: 28rpx;
}

.filter-btn-sumbit {
  width: 250rpx;
  height: 75rpx;
  line-height: 75rpx;
  background-color: #019bff;
  color: #fff;
  font-size: 28rpx;
  margin: 0 0;
}


