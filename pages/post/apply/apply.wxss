.header {
  color: #000;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

.form {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 90%;
  margin-left: 5%;
}

.form-label {
  margin-top: 60rpx;
  font-size: 32rpx;
  color: #2d2d2d;
  text-align: left;
}

.form-checkbox {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.checkbox-item {
  padding-left: 22rpx;
  padding-right: 22rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #fff;
  color: #1c43b2;
  font-size: 26rpx;
  text-align: center;
  border: 1rpx solid #809cec;
  border-radius: 50rpx;
  float: left;
  margin-right: 20rpx;
  margin-top: 20rpx;
  min-width: 55rpx;
}

.input-i {
  font-size: 32rpx;
  color: #2d2d2d;
  height: 80rpx;
  line-height: 80rpx;
  width: 500rpx;
  border-radius: 100rpx;
  border: 1rpx solid #809cec;
  padding-left: 20rpx;
  margin-top: 10rpx;
}

.input-picker {
  font-size: 32rpx;
  color: #2d2d2d;
  height: 80rpx;
  line-height: 80rpx;
  width: 500rpx;
  border-radius: 100rpx;
  border: 1rpx solid #809cec;
  padding-left: 20rpx;
  margin-top: 10rpx;
}

.warn {
  color: #d81e06;
  font-size: 26rpx;
  text-align: left;
  margin-top: 10rpx;
}

.form-textarea {
  height: 300rpx;
  width: 650rpx;
  margin: 0 auto;
  font-size: 28rpx;
  color: #2d2d2d;
  border-radius: 10rpx;
  margin-top: 20rpx;
  border: 1rpx solid #809cec;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  background-color: #f7f8fe;
}

.check-ok {
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-bottom: 30rpx;
  margin-top: 60rpx;
}

.check-ok-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.ok-item {
  font-size: 28rpx;
  color: #2d2d2d;
}

.rule-item {
  border-bottom: 1rpx solid #2d2d2d;
}



.publish {
  background-color: #1c43b2;
  color: #fff;
  width: 440rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin: 50rpx auto;
  border-radius: 100rpx;
  font-size: 26rpx;
}