/* pages/circle/questionnaire/index.wxss */

page {
  background: rgba(30, 110, 228, 1);
  padding-bottom:20rpx;
}

.questionnaire-title {
  font-weight: bold;
  text-align: center;
}

.item {
  margin: 20rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 2rpx 8rpx 0 rgba(20, 58, 115, 0.36);
  border-radius: 8rpx;
  padding: 30rpx;
}

.title {
  font-size: 30rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.option {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(0, 0, 0, 1);
  padding: 16rpx 48rpx;
  display: flex;
  box-sizing: border-box;
  align-items: center;
  word-break: break-all;
  flex-direction: row;
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 8rpx;
  border: 1rpx solid rgba(210, 212, 214, 1);
}

.option-content {
  flex: 1;
}

.option image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.desc {
  margin-top: 20rpx;
}

.rich-text {
  width: 100%;
}

rich-text .rich-img {
  max-width: 100%;
  height: auto;
}

.submit {
  height: 90rpx;
  margin: 20rpx;
  background: white;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(35, 61, 203, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}