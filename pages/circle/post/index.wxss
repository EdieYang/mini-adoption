/* pages/circle/post/index.wxss */

.content {
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  height: 220rpx;
}

.post {
  width: 235rpx;
  height: 72rpx;
  background: rgba(35, 61, 203, 1);
  border-radius: 36rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(254, 254, 254, 1);
  position: fixed;
  bottom: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  left: 50%;
  transform: translateX(-50%);
}

.ui-uploader-cell-other {
  width: 690rpx;
  padding: 40rpx 0;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  margin: 0 auto;
}

.ui-uploader-cell {
  width: 690rpx;
  padding: 20rpx 0;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  margin: 0 auto;
}

.ui-uploader-item {
  width: 220rpx;
  height: 220rpx;
}

.ui-uploader-item image {
  width: 100%;
  height: 100%;
}

.ui-uploader {
  width: 190rpx;
  height: 190rpx;
  background: rgba(254, 254, 254, 1);
  border: 2rpx solid rgba(232, 234, 242, 1);
  font-size: 70rpx;
  color: rgba(232, 234, 242, 1);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 15rpx;
}