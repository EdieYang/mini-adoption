/* pages/circle/apply/index.wxss */


.activities {
  display: flex;
  padding: 30rpx;
  border-top: 20rpx solid rgba(241, 241, 243, 1);
}

.activities image {
  width: 352rpx;
  height: 264rpx;
  border-radius: 8rpx;
}

.activity-content {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.activity-title {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: black;
  word-break: break-all;
}

.activity-addr {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(136, 136, 136, 1);
  margin-top: 8rpx;
}

.activity-price {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(35, 61, 203, 1);
  margin-top: 8rpx;
}

.apply {
  display: flex;
  justify-content: space-between;
  margin-top: auto;
  align-items: center;
}

.apply-btn {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(35, 61, 203, 1);
  width: 142rpx;
  height: 56rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx solid rgba(35, 61, 203, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.activity-status {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(0, 0, 0, 1);
  margin-left: auto;
}