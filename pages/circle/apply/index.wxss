/* pages/circle/apply/index.wxss */

page {
  background-color: rgba(241, 241, 243, 1);
}

.activities {
  display: flex;
  padding: 30rpx;
  background-color: white;
}

.activities image {
  width: 352rpx;
  height: 264rpx;
  border-radius: 8rpx;
}

.activity-content {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.activity-title {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: black;
  word-break: break-all;
}

.activity-addr {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(136, 136, 136, 1);
  margin-top: 8rpx;
}


.activity-time {
  display: flex;
  justify-content: space-between;
  margin-top: auto;
  align-items: center;
}

.date {
  padding: 20rpx 30rpx 50rpx 30rpx;
  background-color: white;
  margin-top: 20rpx;
}

.apply-title {
  font-size: 30rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: black;
}

.apply-item {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: black;
  margin-top: 25rpx;
  display: flex;
  align-items: center;
}

.check {
  width: 24rpx;
  height: 24rpx;
  font-size: 14rpx;
  color: #233DCB;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 8rpx;
  border-radius: 12rpx;
  background: rgba(213, 219, 255, 1);
  border: 1rpx solid rgba(35, 61, 203, 1);
}

.uncheck {
  width: 24rpx;
  height: 24rpx;
  background: rgba(236, 236, 236, 1);
  margin-right: 8rpx;
  border-radius: 12rpx;
  border: none;
}

.bottom {
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  background-color: white;
  padding: 10rpx 30rpx;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
}

.point {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}

.point text {
  color: #FF5D00;
}

.apply-btn {
  width: 360rpx;
  height: 74rpx;
  background: rgba(35, 61, 203, 1);
  border-radius: 37rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(254, 254, 254, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
}