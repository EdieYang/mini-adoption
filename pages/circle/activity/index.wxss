/* pages/circle/activity/index.wxss */

.head {
  position: relative;
}

.banner {
  width: 100%;
  height: 224rpx;
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
}

.circle-content {
  width: 100%;
  box-sizing: border-box;
  margin-top: 72rpx;
  padding: 0 30rpx;
}

.circle-name {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(254, 254, 254, 1);
}

.circle-info {
  display: flex;
  align-items: center;
  margin-top: 22rpx;
}

.circle-count {
  flex: 1;
  font-size: 26rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(255, 243, 195, 1);
  white-space: pre;
}

.follow {
  width: 120rpx;
  height: 56rpx;
  background: white;
  border-radius: 28rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: rgba(35, 61, 203, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.circle-info image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 35rpx;
}

.circle-desc {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: black;
  margin: 60rpx 30rpx 30rpx 30rpx;
  box-sizing: border-box;
}

.circle-desc text {
  color: rgba(35, 61, 203, 1);
}

.activities {
  display: flex;
  padding: 30rpx;
  border-top: 20rpx solid rgba(241, 241, 243, 1);
}

.activities image {
  width: 352rpx;
  height: 264rpx;
  border-radius: 8rpx;
}

.activity-content {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.activity-title {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: black;
  word-break: break-all;
}

.activity-addr {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(136, 136, 136, 1);
  margin-top: 8rpx;
}

.activity-price {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(35, 61, 203, 1);
  margin-top: 8rpx;
}

.apply {
  display: flex;
  justify-content: space-between;
  margin-top: auto;
  align-items: center;
}

.apply-btn {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(35, 61, 203, 1);
  width: 142rpx;
  height: 56rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx solid rgba(35, 61, 203, 1);
  display: flex;
  justify-content: center;
  align-items: center;
}

.activity-status {
  font-size: 26rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(0, 0, 0, 1);
  margin-left: auto;
}