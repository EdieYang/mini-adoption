/* pages/circle/index/index.wxss */

.slide-image {
  width: 100%;
  height: 250rpx;
}

.circle-label {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: black;
  margin: 30rpx 0 0 30rpx;
}

.circle {
  font-family: PingFangSC-Regular, PingFang SC;
  display: flex;
  padding: 30rpx 0;
  margin: 0 30rpx;
  border-bottom: 1rpx solid rgba(205, 205, 205, 1);
}

.circle image {
  width: 260rpx;
  height: 178rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.circle-title {
  font-size: 34rpx;
  color: black;
}

.circle-count {
  font-size: 24rpx;
  color: rgba(162, 162, 162, 1);
  margin-top: 10rpx;
}

.circle-desc {
  width: 100%;
  font-size: 24rpx;
  color: rgba(35, 61, 203, 1);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  position: absolute;
  bottom: 0;
}