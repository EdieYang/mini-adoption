/* pages/circle/index/index.wxss */

.slide-image {
  width: 100%;
  height: 244rpx;
}

.activity-container {
  border-bottom: 20rpx solid rgba(241, 241, 243, 1);
}

.activity_title {
  font-size: 39rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: black;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
}

.more {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  color: rgba(136, 136, 136, 1);
}

.activity-item {
  position: relative;
  width: 330rpx;
  flex-shrink: 0;
  margin: 30rpx 0 30rpx 30rpx;
}

.activity-banner {
  width: 100%;
  height: 216rpx;
  position: absolute;
  border-radius: 10rpx;
}

.activity-content {
  width: 100%;
  position: absolute;
  top: 136rpx;
  height: 170rpx;
  padding: 15rpx;
  box-sizing: border-box;
  background: white;
  box-shadow: 0 4rpx 15rpx 0 rgba(135, 138, 145, 0.16);
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.activity-time {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(35, 61, 203, 1);
}

.activity-area {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: rgba(136, 136, 136, 1);
}

.indicator {
  display: flex;
  width: 100%;
  justify-content: center;
  margin-bottom: 10rpx;
}

.indicator view {
  width: 30rpx;
  height: 10rpx;
  border-radius: 6rpx;
  margin-left: 12rpx;
}

.bg-blue {
  background-color: rgba(35, 61, 203, 1);
}

.bg-grey {
  background-color: rgba(235, 235, 235, 1);
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.circle-banner {
  width: 142rpx;
  height: 142rpx;
  border-radius: 8rpx;
}

.circle-item {
  width: 142rpx;
  margin-right: 25rpx;
}

.circle-name {
  margin-top: 20rpx;
  font-size: 26rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.circle-label {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold, PingFang-SC;
  font-weight: bold;
  color: black;
  margin: 30rpx 0 0 30rpx;
}

.circle {
  font-family: PingFangSC-Regular, PingFang SC;
  display: flex;
  padding: 30rpx 0;
  margin: 0 30rpx;
  border-bottom: 1rpx solid rgba(205, 205, 205, 1);
}

.circle image {
  width: 260rpx;
  height: 178rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.circle-title {
  font-size: 34rpx;
  color: black;
}

.circle-count {
  font-size: 24rpx;
  color: rgba(162, 162, 162, 1);
  margin-top: 10rpx;
}

.circle-desc {
  width: 100%;
  font-size: 24rpx;
  color: rgba(35, 61, 203, 1);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  position: absolute;
  bottom: 0;
}